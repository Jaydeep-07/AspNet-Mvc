
@model ShoppingCart.Models.ProductDetails
@{
    
    
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <h3>Display All Products in Shopping Website with Asp.net MVC</h3>
    No of Products in Cart <b>@ViewBag.cartnumber</b>

    @if (Model != null)
    {
        if (Model.productlist.Count > 0)
        {
            <table border="1">
                <tr>
                    <th>Product ID</th>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Product Image</th>
                </tr>
                @foreach (var item in Model.productlist)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.productid) </td>
                        <td>@Html.DisplayFor(m => item.productname)</td>
                        <td>@Html.DisplayFor(m => item.price)</td>
                        <td><img src="~/@Url.Content(item.productimage)" alt="" width="150" height="150" /></td>
                        <td>@Html.ActionLink("Buy Now", "AddCart", "AddCart", routeValues: new { productid = item.productid, }, htmlAttributes: null)</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <b>No Details Found.</b>
        }
    }
</body>
</html>
